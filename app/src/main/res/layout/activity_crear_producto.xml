<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/degradade"
    tools:context="swasolutions.com.wdpos.actividades.productos.CrearProductoActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/textFacturasTitulo"
        android:textColor="@color/verdeclaro"
        android:fontFamily="serif"
        android:layout_marginBottom="15dp"
        android:id="@+id/txtInfoSignUp"
        android:textStyle="bold|italic"
        android:text="CREAR PRODUCTO"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/imageProducto_crearProducto"
                    android:layout_width="400px"
                    android:layout_height="500px"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/camara"/>

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="2dp"
                android:paddingTop="2dp"
                android:textColorHint="@color/negro"
                android:background="@drawable/edittext"
                android:layout_row="2"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"
                    android:hint="Nombre"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:drawableRight="@drawable/person"
                    android:textColorHint="@color/negro"
                    android:id="@+id/txtNombre_crearProducto"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="2dp"
                android:paddingTop="2dp"
                android:textColorHint="@color/negro"
                android:background="@drawable/edittext"
                android:layout_row="2"
                >
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/spinnerTipo_crearProducto"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="2dp"
                android:paddingTop="2dp"
                android:textColorHint="@color/negro"
                android:background="@drawable/edittext"
                android:layout_row="2"
                >
                <EditText
                    android:id="@+id/txtSlug_crearProducto"
                    android:layout_width="match_parent"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"
                    android:hint="Codigo"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:drawableRight="@drawable/password"
                    android:textColorHint="@color/negro"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="2dp"
                android:paddingTop="2dp"
                android:textColorHint="@color/negro"
                android:background="@drawable/edittext"
                android:layout_row="2"
                >
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/spinnerUnidad_crearProducto"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="2dp"
                android:paddingTop="2dp"
                android:textColorHint="@color/negro"
                android:background="@drawable/edittext"
                android:layout_row="2"
                >
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/spinnerCategoria_crearProducto"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="2dp"
                android:paddingTop="2dp"
                android:textColorHint="@color/negro"
                android:background="@drawable/edittext"
                android:layout_row="2"
                >
                <EditText
                    android:id="@+id/txtCosto_crearProducto"
                    android:layout_width="match_parent"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"
                    android:hint="Costo"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:drawableRight="@drawable/dinero"
                    android:textColorHint="@color/negro"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="2dp"
                android:paddingTop="2dp"
                android:textColorHint="@color/negro"
                android:background="@drawable/edittext"
                android:layout_row="2"
                >
                <EditText
                    android:id="@+id/txtPrecio_crearProducto"
                    android:layout_width="match_parent"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"
                    android:hint="Precio"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:drawableRight="@drawable/dinero"
                    android:textColorHint="@color/negro"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="2dp"
                android:paddingTop="2dp"
                android:textColorHint="@color/negro"
                android:background="@drawable/edittext"
                android:layout_row="2"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"
                    android:hint="Precio2"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:drawableRight="@drawable/dinero"
                    android:textColorHint="@color/negro"
                    />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btnCrearProducto_crearProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Crear producto"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/blanco"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@drawable/buttonspanelbluedark"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
