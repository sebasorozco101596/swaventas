<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="swasolutions.com.wdpos.actividades.sharedpreferences.ConfiguracionActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/toolbar"
        android:text="Configuracion grupos clientes"
        android:textStyle="bold|italic"
        android:textColor="@color/negro"
        android:fontFamily="serif"
        android:textSize="30dp"
        android:gravity="center"/>

    <Switch
        android:id="@+id/SwitchTodosLosGrupos_confGrupos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="Todos los grupos"
        android:checked="false"
        android:textSize="20dp"
        android:textStyle="bold"
        android:switchPadding="20dp"
        android:textOff="NO"
        android:textOn="SI"
        android:layout_gravity="center"/><!--gravity of the Switch-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configuracion grupo 1"
            android:textSize="@dimen/textFacturasTitulo"
            android:textColor="@color/negro"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/spinnerGrupo1_confGrupo"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true" />

            <Button
                android:id="@+id/btnGuardarDatosGrupo1_confGrupo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/accept"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configuracion grupo 2"
            android:textSize="@dimen/textFacturasTitulo"
            android:textColor="@color/negro"
            android:textStyle="bold"/>

