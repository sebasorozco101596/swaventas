<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/degradade"
    tools:context="swasolutions.com.wdpos.actividades.paneles.PanelActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appBarLayoutChats"
        android:theme="@style/AppTheme.AppBarOverlay"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarPanelConfiguracion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonspanelbluedark"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:popupTheme="@style/Theme.AppCompat.Light"
            tools:ignore="UnusedAttribute"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:elevation="2dp"
            >
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="Panel Configuracion"
        android:textColor="@color/negro"
        android:gravity="center"
        android:textStyle="bold|italic"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/bluebackground"
        android:layout_marginBottom="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bluebackground"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:paddingRight="5dp">

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:paddingTop="5dp"
                android:paddingBottom="8dp"
                android:textStyle="bold|italic"
                android:layout_gravity="center"
                android:background="@drawable/buttonpanel"
                android:text="perfil"
                android:drawableTop="@drawable/person"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="5dp"
                android:id="@+id/btnPerfil_panelConfiguracion"
                />

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:paddingTop="5dp"
                android:paddingBottom="8dp"
                android:textStyle="bold|italic"
                android:layout_gravity="center"
                android:background="@drawable/buttonpanel"
                android:text="Notas"
                android:drawableTop="@drawable/notas"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="5dp"
                android:id="@+id/btnNotas_panelConfiguracion"
                />

            <Button
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:paddingTop="5dp"
                android:paddingBottom="8dp"
                android:textStyle="bold|italic"
                android:layout_gravity="center"
                android:background="@drawable/buttonpanel"
                android:text="Terminales"
                android:drawableTop="@drawable/carro"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="5dp"
                android:id="@+id/btnTerminales_panelConfiguracion"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:paddingRight="5dp">


            <Button
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:paddingTop="5dp"
                android:paddingBottom="8dp"
                android:textStyle="bold|italic"
                android:layout_gravity="center"
                android:background="@drawable/buttonpanel"
                android:text="Ajustes"
                android:drawableTop="@drawable/secure"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="5dp"
                android:id="@+id/btnAjustes_panelConfiguracion"
                />

            <Button
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:paddingTop="5dp"
                android:paddingBottom="8dp"
                android:textStyle="bold|italic"
                android:layout_gravity="center"
                android:background="@drawable/buttonpanel"
                android:text="Grupos clientes"
                android:drawableTop="@drawable/addfriend"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="5dp"
                android:id="@+id/btnGruposClientes_panelConfiguracion"
                />

            <Button
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:paddingTop="5dp"
                android:paddingBottom="8dp"
                android:textStyle="bold|italic"
                android:layout_gravity="center"
                android:background="@drawable/buttonpanel"
                android:text="Panel eliminacion"
                android:drawableTop="@drawable/cancel"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="5dp"
                android:id="@+id/btnEliminarTodo_panelConfiguracion"
                />

        </LinearLayout>

        <Switch
            android:id="@+id/SwitchImprimir_panelConfiguracion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Â¿Desea imprimir?"
            android:checked="true"
            android:textSize="20dp"
            android:textStyle="bold"
            android:switchPadding="20dp"
            android:layout_marginTop="10dp"
            android:textOff="NO"
            android:textOn="SI"
            android:layout_gravity="center"/>

    </LinearLayout>



</LinearLayout>
