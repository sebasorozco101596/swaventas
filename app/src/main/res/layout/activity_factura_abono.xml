<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:layout_gravity="center"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:id="@+id/activity_factura"
    android:orientation="vertical"
    android:background="@drawable/edittext"
    tools:context="swasolutions.com.wdpos.actividades.facturas.FacturaAbonoActivity">


    <TextView
        android:id="@+id/txtNombreTienda_facturaAbono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="10dp"
        android:text="JS PLASTIMAS"
        android:gravity="center"
        android:textSize="@dimen/textFacturasTitulo"
        android:textColor="@color/negro"/>

    <TextView
        android:id="@+id/txtDireccion_facturaAbono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Calle duarte 12a Tenares"
        android:gravity="center"
        android:textSize="@dimen/textFacturasTitulo"
        android:textColor="@color/negro"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Servicio Republica \nDominicana"
        android:gravity="center"
        android:textSize="@dimen/textFacturasTitulo"
        android:textColor="@color/negro"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tel: "
            android:gravity="center"
            android:textSize="@dimen/textFacturasTitulo"
            android:layout_marginLeft="2dp"
            android:textColor="@color/negro"/>

        <TextView
            android:id="@+id/txtTelefono_facturaAbono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8296471722"
            android:gravity="center"
            android:textSize="@dimen/textFacturasTitulo"
            android:layout_marginLeft="2dp"
            android:textColor="@color/negro"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Fecha: "
            android:gravity="left"
            android:textSize="16dp"
            android:textColor="@color/negro"/>

        <TextView
            android:id="@+id/txtFecha_facturaAbono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="left"
            android:textSize="16dp"
            android:textColor="@color/negro"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Id ventaa: "
            android:gravity="left"
            android:textSize="16dp"
            android:textColor="@color/negro"/>

        <TextView
            android:id="@+id/txtIdVenta_facturaAbono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="left"
            android:textSize="16dp"
            android:textColor="@color/negro"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Vendedor: "
            android:gravity="left"
            android:textSize="16dp"
            android:textColor="@color/negro"/>

        <TextView
            android:id="@+id/txtVendedor_facturaAbono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="left"
            android:textSize="16dp"
            android:textColor="@color/negro"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Cliente: "
            android:gravity="left"
            android:textSize="16dp"
            android:textColor="@color/negro"/>

        <TextView
            android:id="@+id/txtNombreCliente_FacturaAbono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="left"
            android:textSize="16dp"
            android:textColor="@color/negro"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:text="Total: "
                    android:gravity="left"
                    android:textSize="16dp"
                    android:textColor="@color/negro"/>

                <TextView
                    android:id="@+id/txtTotal_facturaAbono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:textSize="16dp"
                    android:textColor="@color/negro"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Total pagado: "
                    android:gravity="left"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/negro"/>

                <TextView
                    android:id="@+id/txtTotalPagado_FacturaAbono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/negro"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:text="Total a deber: "
                    android:gravity="left"
                    android:textSize="16dp"
                    android:textColor="@color/negro"/>

                <TextView
                    android:id="@+id/txtTotalDebido_FacturaAbono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:textSize="16dp"
                    android:textColor="@color/negro"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:text="Total deudas: "
                    android:gravity="left"
                    android:textSize="16dp"
                    android:textColor="@color/negro"/>

                <TextView
                    android:id="@+id/txtTotalDeudas_FacturaAbono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:textSize="16dp"
                    android:textColor="@color/negro"/>
            </LinearLayout>










        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnSearch_abono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="@dimen/textFacturas"
            android:background="@drawable/selector_btn"
            android:text="@string/btnSearch"
            android:textColor="@color/text_white"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSend_abono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:textSize="@dimen/textFacturas"
                android:drawableTop="@drawable/imprimir"
                android:background="@drawable/buttonspanelbluedark"
                android:text="@string/btnSend"
                android:textColor="@color/text_white"/>

            <Button
                android:id="@+id/btnSendCopia_facturaAbono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:textSize="@dimen/textFacturas"
                android:drawableTop="@drawable/imprimir"
                android:background="@drawable/buttonspanelbluedark"
                android:text="Copia"
                android:textColor="@color/text_white"/>

            <Button

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnVolver_facturaAbono"
                android:drawableTop="@drawable/compartir"
                android:textSize="@dimen/textFacturas"
                android:background="@drawable/selector_btn"
                android:textColor="@color/blanco"
                android:text="Volver al panel"/>



        </LinearLayout>

    </LinearLayout>

</LinearLayout>