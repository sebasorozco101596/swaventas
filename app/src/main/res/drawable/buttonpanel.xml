<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <stroke android:width="2dip" android:color="@color/bluedark" />
            <gradient android:angle="-90" android:endColor="@color/verde" android:startColor="@color/negro"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="2dip" android:color="@color/bluedark" />
            <gradient android:angle="-90" android:startColor="@color/bluedark"  />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="2dip" />
            <stroke android:width="2dip" android:color="@color/negro" />
            <gradient android:angle="-90" android:startColor="@color/azul" android:endColor="@color/blanco"  />
        </shape>
    </item>
</selector>