<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditText" parent="AppTheme">
        <!-- cursor y línea normal-->
        <item name="colorControlNormal">@color/negro</item>
        <item name="android:textColorLink">@color/negro</item>
        <!-- cursor y línea con foco-->
        <item name="colorControlActivated">@color/negro</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="PopupTheme" parent="Theme.AppCompat.Light">
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <!--https://github.com/danielme-com/-Android-popup-menu- -Support-library/blob/master/res/values/styles.xml-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="OverflowMenu" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="android:dropDownVerticalOffset">10dp</item>
        <item name="overlapAnchor">false</item>
    </style>


</resources>
