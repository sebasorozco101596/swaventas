<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingRight="3sp"
    android:paddingLeft="3sp"
    android:paddingTop="5sp">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/blanco"
        android:id="@+id/cardViewProductosFactura"

        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/edittext"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/linearCardViewGroupInfo"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.8"
                android:text="1"
                android:maxWidth="280dp"
                android:textSize="@dimen/textNormalTablet"
                android:gravity="center"
                android:textColor="@color/negro"
                android:textStyle="bold"
                android:id="@+id/txtCantidad_CardViewProductosFactura"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/textNormalTablet"
                android:text="abanico azul"
                android:maxWidth="280dp"
                android:gravity="center"
                android:textColor="@color/negro"
                android:textStyle="bold"
                android:id="@+id/txtNombre_CardViewProductosFactura"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:text="$1500000"
                android:textSize="@dimen/textNormalTablet"
                android:maxWidth="280dp"
                android:gravity="center"
                android:textColor="@color/negro"
                android:textStyle="bold"
                android:id="@+id/txtPrecio_CardViewFactura"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>



</RelativeLayout>
